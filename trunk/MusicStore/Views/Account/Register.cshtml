@model MusicStore.Models.RegisterModel
@{
    ViewBag.Title = "Đăng kí";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Tạo tài khoản thất bại!")
    
    <div>
        <fieldset style="background-image: url('http://localhost:1754/Content/images/0002.jpg')">
            <legend style="font-family: 'Times New Roman', Times, serif; font-size: xx-large;
                font-weight: bold; color: #FF0000; text-align: center;">Trang Đăng Ký</legend>
            <div style="font-family: 'Times New Roman', Times, serif; font-size: large; color: #000000;
                background-color: #FFFFFF; text-align: left; font-weight: bold; background-image: none;">
                Thông Tin Tài Khoản</div>
            <div class="editor-label">
                Tên đăng nhập:
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="editor-label">
                Mật khẩu:
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="editor-label">
                Xác nhận mật khẩu:
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="editor-label">
                Ngày sinh:
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.NgaySinh)
                @Html.ValidationMessageFor(m => m.NgaySinh)
            </div>
            <div class="editor-label">
                Nơi sống:
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.NoiSong)
                @Html.ValidationMessageFor(m => m.NoiSong)
            </div>
            <p>
                <input type="submit" value="Đăng Ký" />
            </p>
        </fieldset>
    </div>
    
}
