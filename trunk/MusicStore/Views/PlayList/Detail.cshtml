@model IEnumerable<MusicStore.Models.CHITIETPLAYLIST>
@{
    ViewBag.Title = "Chi tiết playlist";
    Layout = "~/Views/Shared/LayoutUser/_Layout.cshtml";
}
<script src="/Scripts/jquery.js" type="text/javascript"></script>
<script src="/Scripts/functions.js" type="text/javascript"></script>
<h2>
    Chi tiết playlist</h2>
@foreach (var item in Model)
{
    <div>
        <a href="@Url.Action("../BaiHat/PlaylistBaiHat", new { id = item.MaBaiHat })">@item.BAIHAT.TenBaiHat</a></div>
}
<div class="sidenav"  style="text-align:center;">
    <div class="navhead">
        <h3 style="cursor: pointer">
            Nghe toàn bộ playlist</h3>
    </div>
    <div class="subnav">
        <ul class="submenu">
            <script type='text/javascript' src='/Plugins/MediaPlayer/jwplayer.js'></script>

            <div id='mediaplayer'>
            </div>


            <script type='text/javascript'>
    jwplayer('mediaplayer').setup(
    {
        'flashplayer': '/Plugins/MediaPlayer/player.swf',
        'id': 'playerID',
        'width': '400',
        'height': '500',
        'allowscriptaccess': 'always',
        'wmode': 'opaque',
        'backcolor': '000000',
        'frontcolor' : 'ffffff',
        'allowfullscreen': 'true',
        'autostart': 'true',
        'repeat': 'always',
        'playlist.position': 'bottom',
        'playlist.size': '150',
        'playlist': [
                        
                        @foreach (var item in Model)
                        {
                            var content = new HtmlString("{ file: '/MusicFiles/" + @item.BAIHAT.LinkDownload + "', title: '" + @item.BAIHAT.TenBaiHat + "', image: '/Plugins/MediaPlayer/bg.jpg'},");
                            @content;
                        }                        
                    ]
        });

            </script>

        </ul>
    </div>
</div>
