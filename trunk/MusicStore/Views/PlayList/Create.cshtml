@model MusicStore.Models.PLAYLIST

@{
    ViewBag.Title = "Tạo playlist";
    Layout = "~/Views/Shared/LayoutGuest/_Layout.cshtml";
}

<h2>CTạo Playlist</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Thông tin playlist của bạn</legend>

        <div class="editor-label">
            Tên playlist
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TenPlaylist)
            @Html.ValidationMessageFor(model => model.TenPlaylist)
        </div>

        <p>
            <input type="submit" value="Thêm" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "../HomeGuest")
</div>

