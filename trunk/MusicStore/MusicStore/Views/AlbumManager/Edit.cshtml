@model MusicStore.Models.ALBUM
@{
    ViewBag.Title = "Cập nhật Album | " + @Model.TenAlbum;
    Layout = "~/Views/Shared/LayoutAdmin/_Layout.cshtml";
}
<h2>
    Cập nhật Album</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Thông tin Album @Model.TenAlbum</legend>
        @Html.HiddenFor(model => model.MaAlbum)
        <div class="editor-label">
            Tên Album:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TenAlbum)
            @Html.ValidationMessageFor(model => model.TenAlbum)
        </div>
        <div class="editor-label">
            Tình trạng Album
        </div>
        <div class="editor-field">
            @Html.DropDownList("MaTinhTrangAlbum", new SelectList(ViewBag.TinhTrangAlbum as System.Collections.IEnumerable, "MaTinhTrangAlbum", "TenTinhTrangAlbum", Model.MaTinhTrangAlbum), "--SELECT ONE--")
            @Html.ValidationMessageFor(model => model.MaTinhTrangAlbum)
        </div>
        <p>
            <input type="submit" value="Lưu" />
        </p>
    </fieldset>
}
<div class="goback">
    @Html.ActionLink("<<Quay lại", "Index")
</div>
