@model IEnumerable<MusicStore.Models.CHITIETALBUM>
@{
    ViewBag.Title = "Chi tiết Album";
    Layout = "~/Views/Shared/LayoutAdmin/_Layout.cshtml";
    var grid = new WebGrid(source: Model, canSort: true, canPage: true, rowsPerPage: 10);
}
<h2>
    Danh sách bài hát có trong Album</h2>
<div class="goback">
    @Html.ActionLink("<<Quay lại", "Index")
</div>
@grid.GetHtml(
    tableStyle: "webgrid-table",
    headerStyle: "webgrid-header",
    footerStyle: "paging-number",
    alternatingRowStyle: "webgrid-alternatingRow",
    rowStyle: "webgrid-row",
    columns: grid.Columns(
        grid.Column("MaChiTietAlbum", "Mã chi tiết album"),
        grid.Column("MaBaiHat", "Mã bài hát"),
         grid.Column(
            header: "",
            style: "",
            format: (item) => new HtmlString(Html.ActionLink("Xóa", "Remove", new { id = item.MaChiTietAlbum }).ToString())
        )
            )
)
@{
    if (!string.IsNullOrWhiteSpace(grid.SortColumn))
    {
    <script type="text/javascript">
        $('thead > tr > th > a[href*="sort=@grid.SortColumn"]').parent().append('@(grid.SortDirection == SortDirection.Ascending ? "^" : "v")');
    </script>
    }
}
<p class="sum">
    Tổng số bài hát hiện có trong Album: <em>@Html.Encode(grid.TotalRowCount)</em></p>