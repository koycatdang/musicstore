@model IEnumerable<MusicStore.Models.ALBUM>

@{
    ViewBag.Title = "Quản lí bài Album";
    Layout = "~/Views/Shared/LayoutAdmin/_Layout.cshtml";
    var grid = new WebGrid(source: Model, canSort: true, canPage: true, rowsPerPage: 10);
}
<h2>
    Quản lí Album</h2>
<p>
    @Html.ActionLink("Thêm Album", "Create")
</p>
<p>
    @Html.ActionLink("Thêm chi tiết Album", "AddSong")
</p>
@grid.GetHtml(
    tableStyle: "webgrid-table",
    headerStyle: "webgrid-header",
    footerStyle: "paging-number",
    alternatingRowStyle: "webgrid-alternatingRow",
    rowStyle: "webgrid-row",
    columns: grid.Columns(
        grid.Column("TenAlbum", "Tên Album"),
        grid.Column("MaTinhTrangAlbum", "Mã tình trạng Album"),
        grid.Column(
            header: "",
            style: "",
            format: (item) => new HtmlString(Html.ActionLink("Sửa", "Edit", new { id = item.MaAlbum }).ToString() + " | " +
                                             Html.ActionLink("Xóa", "Delete", new { id = item.MaAlbum }).ToString() + " | " +
                                             Html.ActionLink("Chi tiết", "Details", new { id = item.MaAlbum }).ToString())
        )
    )
)
@{
    if (!string.IsNullOrWhiteSpace(grid.SortColumn))
    {
    <script type="text/javascript">
        $('thead > tr > th > a[href*="sort=@grid.SortColumn"]').parent().append('@(grid.SortDirection == SortDirection.Ascending ? "^" : "v")');
    </script>
    }
}
<p class="sum">
    Tổng số album hiện có: <em>@Html.Encode(grid.TotalRowCount)</em></p>

