@model MusicStore.Models.THELOAI
@{
    ViewBag.Title = "Cập nhật thể loại | " + @Model.TenTheLoai;
    Layout = "~/Views/Shared/LayoutAdmin/_Layout.cshtml";
}
<h2>
    Cập nhật thông tin thể loại</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Thông tin thể loại @Model.TenTheLoai</legend>
        @Html.HiddenFor(model => model.MaTheLoai)
        <div class="editor-label">
            Tên thể loại:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TenTheLoai)
            @Html.ValidationMessageFor(model => model.TenTheLoai)
        </div>
        <div class="editor-label">
            Tình trạng thể loại:
        </div>
        <div class="editor-field">
            @Html.DropDownList("MaTinhTrangTheLoai", new SelectList(ViewBag.TinhTrangTheLoai as System.Collections.IEnumerable, "MaTinhTrangTheLoai", "TenTinhTrangTheLoai", Model.MaTheLoai), "--SELECT ONE--")
            @Html.ValidationMessageFor(model => model.MaTinhTrangTheLoai)
        </div>
        <p>
            <input type="submit" value="Lưu" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
