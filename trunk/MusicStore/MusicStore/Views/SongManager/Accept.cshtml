@model MusicStore.Models.BAIHAT
@{
    ViewBag.Title = "Xem thông tin bài hát đang chờ";
    Layout = "~/Views/Shared/LayoutAdmin/_Layout.cshtml";
}
<h2>
    Xem thông tin bài hát</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Thông tin bài hát</legend>
        @Html.HiddenFor(model => model.MaBaiHat)
        <div class="editor-label">
            Tên bài hát:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TenBaiHat)
            @Html.ValidationMessageFor(model => model.TenBaiHat)
        </div>
        <div class="editor-label">
            Nhạc sĩ sáng tác:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NHACSI.TenNhacSi)
            @Html.ValidationMessageFor(model => model.MaNhacSi)
        </div>
        <div class="editor-label">
            Ca sĩ trình bày:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CASI.TenCaSi)
            @Html.ValidationMessageFor(model => model.MaCaSiTrinhBay)
        </div>
        <div class="editor-label">
            Chất lượng âm thanh:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CHATLUONGAMTHANH.MaChatLuongAmThanh)
            @Html.ValidationMessageFor(model => model.MaChatLuongAmThanh)
        </div>
        <div class="editor-label">
            Thể loại:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.THELOAI.TenTheLoai)
            @Html.ValidationMessageFor(model => model.MaTheLoai)
        </div>
        <p>
            <input type="submit" value="Đồng ý" />
        </p>
    </fieldset>
}
<div class="goback">
    @Html.ActionLink("<<Quay lại", "Index")
</div>
