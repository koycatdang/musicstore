@model MusicStore.Models.NGUOIDUNG
@{
    ViewBag.Title = "Tạo người dùng mới";
    Layout = "~/Views/Shared/LayoutAdmin/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<h2>
    Thêm người dùng</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Thông tin người dùng</legend>
        <div class="editor-label">
            Họ tên người dùng:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TenNguoiDung)
        </div>
        <div class="editor-label">
            Tên tài khoản:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserName)
            @Html.ValidationMessageFor(model => model.UserName)
        </div>
        <div class="editor-label">
            Mật khẩu:
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.PassWord)
            @Html.ValidationMessageFor(model => model.PassWord)
        </div>
        <div class="editor-label">
            Xác nhận mật khẩu:
        </div>
        <div class="editor-field">
            @Html.Password("PassWord")
        </div>
        <div class="editor-label">
            Ngày sinh:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NgaySinh)
        </div>
        <div class="editor-label">
            Nơi sống:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NoiSong)
        </div>
        <div class="editor-label">
            Loại người dùng:
        </div>
        <div class="editor-field">
            @Html.DropDownList("MaLoaiNguoiDung", new SelectList(ViewBag.LoaiNguoiDung as System.Collections.IEnumerable, "MaLoaiNguoiDung", "TenLoaiNguoiDung", Model.MaLoaiNguoiDung))
        </div>
        <div class="editor-label">
            Tình trạng người dùng:
        </div>
        <div class="editor-field">
            @Html.DropDownList("MaTinhTrangNguoiDung", new SelectList(ViewBag.TinhTrangNguoiDung as System.Collections.IEnumerable, "MaTinhTrangNguoiDung", "TenTinhTrangNguoiDung", Model.MaTinhTrangNguoiDung))
        </div>
        <p>
            <input type="submit" value="Tạo" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
