@model MusicStore.Models.NGUOIDUNG

@{
    ViewBag.Title = "Cập nhật người dùng | " + Model.TenNguoiDung;
    Layout = "~/Views/Shared/LayoutAdmin/_Layout.cshtml";
}

<h2>Cập nhật thông tin của @Model.TenNguoiDung</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Thông tin của @Model.TenNguoiDung</legend>

        @Html.HiddenFor(model => model.MaNguoiDung)

        <div class="editor-label">
            Họ tên:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TenNguoiDung)
            @Html.ValidationMessageFor(model => model.TenNguoiDung)
        </div>

        <div class="editor-label">
            Tên tài khoản:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserName)
            @Html.ValidationMessageFor(model => model.UserName)
        </div>

        <div class="editor-label">
            Mật khẩu:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PassWord, "Password")
            @Html.ValidationMessageFor(model => model.PassWord)
        </div>

        <div class="editor-label">
            Ngày sinh:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NgaySinh)
            @Html.ValidationMessageFor(model => model.NgaySinh)
        </div>

        <div class="editor-label">
            Nơi sống:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NoiSong)
            @Html.ValidationMessageFor(model => model.NoiSong)
        </div>

        <div class="editor-label">
            Loại người dùng:
        </div>
        <div class="editor-field">
            @Html.DropDownList("MaLoaiNguoiDung", new SelectList(ViewBag.LoaiNguoiDung as System.Collections.IEnumerable, "MaLoaiNguoiDung", "TenLoaiNguoiDung", Model.MaLoaiNguoiDung))
            @Html.ValidationMessageFor(model => model.MaLoaiNguoiDung)
        </div>

        <div class="editor-label">
            Tình trạng người dùng:
        </div>
        <div class="editor-field">
           @Html.DropDownList("MaTinhTrangNguoiDung", new SelectList(ViewBag.TinhTrangNguoiDung as System.Collections.IEnumerable, "MaTinhTrangNguoiDung", "TenTinhTrangNguoiDung", Model.MaTinhTrangNguoiDung))
           @Html.ValidationMessageFor(model => model.MaTinhTrangNguoiDung)
        </div>

        <p>
            <input type="submit" value="Lưu" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>

