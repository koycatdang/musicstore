@model MusicStore.Models.NGUOIDUNG

@{
    ViewBag.Title = "Edit User |" + Model.TenNguoiDung;
    Layout = "~/Views/Shared/LayoutAdmin/_Layout.cshtml";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Edit User + @Model.TenNguoiDung</legend>

        @Html.HiddenFor(model => model.MaNguoiDung)

        <div class="editor-label">
            Name:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TenNguoiDung)
            @Html.ValidationMessageFor(model => model.TenNguoiDung)
        </div>

        <div class="editor-label">
            Account:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserName)
            @Html.ValidationMessageFor(model => model.UserName)
        </div>

        <div class="editor-label">
            Password:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PassWord, "Password")
            @Html.ValidationMessageFor(model => model.PassWord)
        </div>

        <div class="editor-label">
            BirthDay:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NgaySinh)
            @Html.ValidationMessageFor(model => model.NgaySinh)
        </div>

        <div class="editor-label">
            Habitat:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NoiSong)
            @Html.ValidationMessageFor(model => model.NoiSong)
        </div>

        <div class="editor-label">
            User Role:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaLoaiNguoiDung)
            @Html.ValidationMessageFor(model => model.MaLoaiNguoiDung)
        </div>

        <div class="editor-label">
            User Status:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaTinhTrangNguoiDung)
            @Html.ValidationMessageFor(model => model.MaTinhTrangNguoiDung)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

