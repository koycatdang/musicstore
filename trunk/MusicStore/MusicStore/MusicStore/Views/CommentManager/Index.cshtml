@model IEnumerable<MusicStore.Models.COMMENT>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdmin/_Layout.cshtml";
    var grid = new WebGrid(source: Model, canSort: true, canPage: true, rowsPerPage: 10);
}
<h2>
    Quản lí lời bình luận</h2>
@grid.GetHtml(
    tableStyle: "webgrid-table",
    headerStyle: "webgrid-header",
    footerStyle: "paging-number",
    alternatingRowStyle: "webgrid-alternatingRow",
    rowStyle: "webgrid-row",
    columns: grid.Columns(
        grid.Column("MaNguoiDung", "Mã người dùng"),
        grid.Column("MaBaiHat", "Mã bài hát"),
        grid.Column("NoiDung", "Nội dung"),
        grid.Column("NgayComment", "Ngày Comment"),
        grid.Column(
            header: "",
            style: "",
            format: (item) => new HtmlString(Html.ActionLink("Sửa", "Edit", new { id = item.MaComment }).ToString() + " | " +
                                             Html.ActionLink("Xóa", "Delete", new { id = item.MaComment }).ToString())
        )
    )
)
@{
    if (!string.IsNullOrWhiteSpace(grid.SortColumn))
    {
    <script type="text/javascript">
        $('thead > tr > th > a[href*="sort=@grid.SortColumn"]').parent().append('@(grid.SortDirection == SortDirection.Ascending ? "^" : "v")');
    </script>
    }
}
<p class="sum">
    Tổng số comment: <em>@Html.Encode(grid.TotalRowCount)</em></p>
